<UserControl x:Class="DotNetNinjaQuiz.Controls.GameProgressLadder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="auto" Width="auto">
    <Grid>
        <Border BorderBrush="Blue" Background="Black" BorderThickness="2" CornerRadius="4,4,4,4" Opacity="0.5">
            
        </Border>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />                
            </Grid.RowDefinitions>
            
            <Viewbox>
                <StackPanel x:Name="_gameLevelStack" Orientation="Vertical">                
                </StackPanel>
            </Viewbox>
        </Grid>
    </Grid>
</UserControl>
